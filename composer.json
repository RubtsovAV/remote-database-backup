{
    "name": "rubtsovav/rest-database-exporter",
    "description": "",
    "type": "tempalte",
    "authors": [
        {
            "name": "Alexander Rubtsov",
            "email": "RubtsovAV@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4" : {
            "RubtsovAV\\RestDatabaseExporter\\": "src/"
        }
    },

    "autoload-dev":{
        "psr-4" : {
            "RubtsovAV\\RestDatabaseExporter\\Test\\": "test/suites"
        }
    },

    "require": {
        "php": ">=5.2",
        "guzzlehttp/guzzle": "^6.2"
    },

    "require-dev":{
        "phpunit/phpunit": "^5.5",
        "squizlabs/php_codesniffer": "^2.7"
    },

    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.xml && echo \"\n>> Checking code standards\n\" && test/bin/phpcs.bash emacs",
        "csfix": "test/bin/phpcbf.bash",
        "cscheck": "test/bin/phpcs.bash emacs"
    }
}
